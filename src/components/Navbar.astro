---
import HeaderLink from './HeaderLink.astro'
import ThemeToggle from './ThemeToggle.astro'
import { Home, MessageSquareText } from '@lucide/astro'
import Logo from './Logo'
---

<header
  class="w-auto mx-4 xl:mx-auto xl:w-[1024px] sticky top-[10px] z-50 border rounded-md border-black/10 dark:border-white/10 dark:bg-black/70 bg-white/70 backdrop-blur-md"
>
  <nav class="flex flex-row justify-between items-center px-4 py-2">
    <a href="/">
      <Logo />
    </a>
    <div class="flex flex-row gap-4">
      <div class="flex flex-row gap-4">
        <HeaderLink href="/"><Home size={16} /> Home</HeaderLink>
        <HeaderLink href="/blog"><MessageSquareText size={16} /> Blog</HeaderLink>
      </div>
      <ThemeToggle />
    </div>
  </nav>
</header>
