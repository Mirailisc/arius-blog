---
import { Button } from '@/components/ui/button'
import Layout from '@/layouts/Layout.astro'
import GoBackButton from '@/components/GoBackButton'
---

<Layout>
  <main class="container mx-auto mt-20 text-center">
    <div class="flex flex-col gap-4 items-center justify-center mt-10">
      <h1 class="text-4xl font-bold">404 - Page Not Found</h1>
      <p class="text-zinc-600 dark:text-zinc-300 mt-4">The page you're looking for doesn't exist.</p>
      <div class="flex flex-row gap-4 items-center">
        <a href="/">
          <Button variant="default">Go Home</Button>
        </a>
        <GoBackButton client:load />
      </div>
    </div>
  </main>
</Layout>
